@model WebApp.Models.ReservationForm
@{
    ViewData["Title"] = "NewReservation";
}

@using (Html.BeginForm("NewReservation", "Reservation", FormMethod.Post))
{
    @Html.ValidationSummary(true);


    <div class="form-group">
        <label asp-for="RequstedDate" class="form-group">Požadované datum</label>
        <input asp-for="RequstedDate" class="form-control" type="datetime-local"/>
    </div>

    <div class="form-group">
        <label asp-for="Material">Materiál</label>
        <select class="form-control" asp-for="Material">
            <option>Švestka</option>
            <option>Hruška</option>
            <option>Třešen</option>
            <option>Jablko</option>
            <option>Meruňka</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MaterialAmount">Množství materiálu</label>
        <input asp-for="MaterialAmount" class="form-control" type="number" placeholder="Množství materiálu"/>
    </div>


    <button type="submit" class="btn btn-primary">Rezervovat</button>

}


